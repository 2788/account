generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  username    String    @unique
  password    String
  createdTime DateTime  @default(now())
  updatedTime DateTime? @default(now())
  deletedTime DateTime?
}

model Secret {
  id     String         @id @default(uuid())
  key    String         @default(uuid())
  type   String
  value  String
  userId String
  createdTime DateTime  @default(now())
  updatedTime DateTime? @default(now())
  deletedTime DateTime?
}
